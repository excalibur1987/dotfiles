#!/usr/bin/env bash

parse_params() {
  # default values of variables set from params
  create_upstream=1
  create_pull_request=0
  duplicate_db=1
  # prefix="$(git config github.user)/"
  base='main'
  branch=''

  while :; do
    case "${1-}" in
    -h | --help) usage ;;
    -v | --verbose) set -x ;;
    --no-color) NO_COLOR=1 ;;
    --no-duplicate-db) duplicate_db=0 ;;
    -N | --no-create-upstream) create_upstream=0 ;;
    -b | --branch)
      branch="$2"
      shift
      ;;
    -B | --base)
      base="${2-}"
      shift
      ;;
    -?*) die "Unknown option: $1" ;;
    *) break ;;
    esac
    shift
  done

  args=("$@")

  # check required params and arguments
  # [[ -z "${param-}" ]] && die "Missing required parameter: param"
  [[ ${#args[@]} -eq 0 ]] && die "Missing script arguments"

  # if a branch was not specified, generate one based on the prefix and folder name
  if [[ -z "$branch" ]]; then
    branch="${args[0]}"
  fi

  wk="${args[0]}"

  return 0
}

parse_params "$@"


if [ $duplicate_db -eq 1 ]; then
    DB_NAME="psc-$branch"
    duplicate-psc-db $DB_NAME&
fi

DIR=/home/omar/repos/production/planet-support-center
cd $DIR

if [ $create_upstream -eq 0 ]; then
    worktree-add -B $base -N $branch
else
    worktree-add -B $base $branch
fi

cp $DIR/.env $DIR/$branch/.env
cd $DIR/$branch


old_string=":5432/psc-prod"
new_string=":5432/$DB_NAME"

file_path="$DIR/$branch/.env"
sed -i "s|$old_string|$new_string|g" "$file_path"

pnpm i --shamefully-hoist > /dev/null 2>&1
poetry install --no-root && source .venv/bin/activate
