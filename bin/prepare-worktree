#!/usr/bin/env bash

basedir=$(echo ${PWD##*/})

msg() {
  echo >&2 -e "${1-}"
}

die() {
  local msg=$1
  local code=${2-1} # default exit status 1
  msg "$msg"
  exit "$code"
}
parse_params() {
  # default values of variables set from params
  create_upstream=1
  # prefix="$(git config github.user)/"
  branch=''

  while :; do
    case "${1-}" in
    -b | --branch)
      branch="$2"
        eval "cp ~/projects/env-vars/${basedir}_.env ${branch}/.env"
        cd $branch
      shift
      ;;
    -e | --env)
        if [[ "${2-}" != "js" ]]; then
            eval "pnpm install"
            shift
        fi
        if [[ "${2-}" != "python" ]]; then
            eval "poetry install"
            echo "source $(pwd)/.env\n" >> $(echo $(poetry env info -p)"/bin/activate")
            shift
        fi

      ;;
    -?*) die "Unknown option: $1" ;;
    *) break ;;
    esac
    shift
  done

  args=("$@")

  return 0
}

parse_params "$@"


