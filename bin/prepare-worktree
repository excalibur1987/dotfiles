#!/usr/bin/env bash

basedir=$(echo ${PWD##*/})

msg() {
  echo >&2 -e "${1-}"
}

die() {
  local msg=$1
  local code=${2-1} # default exit status 1
  msg "$msg"
  exit "$code"
}
parse_params() {
  # default values of variables set from params
  create_upstream=1
  # prefix="$(git config github.user)/"
  branch=''
  python_env=0
  js_env=0
  env_path=''

  while :; do
    case "${1-}" in
    -v | --env-path)
      env_path="$2"
      shift
      ;;
    -b | --branch)
      branch="$2"
      shift
      ;;
    -e | --env)
      if [[ "${2-}" != "js" ]]; then
          js_env=1
      fi
      if [[ "${2-}" != "python" ]]; then
          python_env=1
      fi
          shift
      ;;
    -?*) die "Unknown option: $1" ;;
    *) break ;;
    esac
    shift
  done

  args=("$@")

  if [[ -z "$branch" ]]; then
    branch="${args[0]}"
  fi

  return 0
}
parse_params "$@"

if [[ -n "$env_path"  ]]; then
  eval "cp ${env_path}/${basedir}_.env ${branch}/.env"
fi

cd $branch

if [[ $js_env -eq 1 ]]; then
    eval "pnpm install --shamefully-hoist"
fi

if [[ $python_env -eq 1 ]]; then
    eval "poetry install"
    echo "source $(pwd)/.env\n" >> $(echo $(poetry env info -p)"/bin/activate")
fi
